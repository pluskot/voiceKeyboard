<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:id="@+id/captionPanel"
        android:visibility="visible">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:id="@+id/modifiersPanel"
            android:visibility="visible">
            <ImageButton
                android:id="@+id/shiftIcon"
                android:layout_gravity="top|end"
                android:layout_marginEnd="10dp"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_shift"
                android:visibility="visible"
                />
            <ImageButton
                android:id="@+id/altIcon"
                android:layout_gravity="top|end"
                android:layout_marginEnd="45dp"
                android:layout_width="35dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_alt"
                android:visibility="visible"
                />
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:layout_gravity="center|center"
            android:id="@+id/caption_text"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:id="@+id/buttonPanel"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/addLetter"
            android:layout_gravity="center|center"
            android:layout_marginStart="-128dp"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/ic_button"
            android:src="@drawable/ic_aa"
            />
        <ImageButton
            android:id="@+id/addNumeric"
            android:layout_gravity="center|center"
            android:layout_marginStart="-64dp"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/ic_button"
            android:src="@drawable/ic_0_9"
            />
        <ImageButton
            android:id="@+id/addSpecialCharacter"
            android:layout_gravity="center|center"
            android:layout_marginStart="0dp"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/ic_button"
            android:src="@drawable/ic_special"
            />
        <ImageButton
            android:id="@+id/addCommand"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center|center"
            android:layout_marginStart="64dp"
            android:background="@drawable/ic_button"
            android:src="@drawable/ic_text_fields_black_24dp"
            />
        <ImageButton
            android:id="@+id/fullSetup"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_gravity="center|center"
            android:layout_marginStart="128dp"
            android:background="@drawable/ic_button"
            android:src="@drawable/ic_mic_black_24dp"
            />
    </FrameLayout>

</FrameLayout>
